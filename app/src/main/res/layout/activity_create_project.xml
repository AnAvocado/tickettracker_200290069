<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".CreateProjectActivity">

    <TextView
        android:id="@+id/textView_create_project"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/aldrich"
        android:text="Create new project"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFEB3B"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edittext_projectname_createproject"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:hint="Project Name..."
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textView_create_project"
        app:layout_constraintStart_toStartOf="@+id/textView_create_project"
        app:layout_constraintTop_toBottomOf="@+id/textView_create_project" />

    <EditText
        android:id="@+id/edittext_projectdescription_createproject"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Project Description..."
        android:inputType="textMultiLine"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        app:layout_constraintEnd_toEndOf="@+id/edittext_projectname_createproject"
        app:layout_constraintStart_toStartOf="@+id/edittext_projectname_createproject"
        app:layout_constraintTop_toBottomOf="@+id/edittext_projectname_createproject" />

    <Button
        android:id="@+id/button_create_project"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_green_light"
        android:text="Create Project"
        app:layout_constraintEnd_toEndOf="@+id/edittext_projectdescription_createproject"
        app:layout_constraintStart_toStartOf="@+id/edittext_projectdescription_createproject"
        app:layout_constraintTop_toBottomOf="@+id/edittext_projectdescription_createproject" />

</androidx.constraintlayout.widget.ConstraintLayout>